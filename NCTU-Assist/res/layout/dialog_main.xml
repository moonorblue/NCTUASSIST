<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:background="#000000">

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="default" 
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/button_past"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:drawableTop="@drawable/default_btn1"
        android:background="@drawable/selector_btn"
		android:textColor="@drawable/button_text_color"
		android:textSize="15dp"
        android:text="button_past" />

    <Button
        android:id="@+id/button_now"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:drawableTop="@drawable/default_btn2"
        android:background="@drawable/selector_btn"
		android:textColor="@drawable/button_text_color"
		android:textSize="15dp"
        android:text="button_now" />

    <Button
        android:id="@+id/button_future"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@id/button_past"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:drawableTop="@drawable/default_btn3"
        android:background="@drawable/selector_btn"
		android:textColor="@drawable/button_text_color"
		android:textSize="15dp"
        android:text="button_future" />
	
	<Button
        android:id="@+id/button_no"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@id/button_now"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:drawableTop="@drawable/default_btn4"
        android:background="@drawable/selector_btn"
		android:textColor="@drawable/button_text_color"
		android:textSize="15dp"
        android:text="button_no" />
</RelativeLayout>
